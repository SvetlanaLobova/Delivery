@model Orders

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="nav-item">Создать заказ</h2>
            <hr />
        </div>
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span>@TempData["Error"]</span>
            </div>
        }
        <div class="mb-3">
            <label asp-for="SendСity">Город отправителя</label>
            <input asp-for="SendСity" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="SendAddress">Адрес отправителя</label>
            <input asp-for="SendAddress" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="GetСity">Город получателя</label>
            <input asp-for="GetСity" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="GetAddress">Адрес получателя</label>
            <input asp-for="GetAddress" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Weight">Вес груза, кг.</label>
            <input asp-for="Weight" class="form-control" />
        </div>
        <div class="mb-3">
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата забора груза</label>
                <input asp-for="Date" class="form-control" />
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Создать</button>
        <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Назад
        </a>
    </div>
</form>